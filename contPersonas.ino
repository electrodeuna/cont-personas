void setup() {
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(8, INPUT);
  display.begin(SH1106_SWITCHCAPVCC, 0x3C);//CONFIGURA LA DIRECCION DEL DISPLAY
  display.clearDisplay();//BORRAR DISPLAY
  display.setTextColor(WHITE);//TEXTO EN COLOR BLANCO
  display.setTextSize(2);//TAMAÃ‘O DE LA LETRA (SE PUDE AJUSTRAR CON DECIMALES EJEMPLO (1.1, 1.2, 1.3...)
  display.setCursor(0,0);
  display.drawBitmap(0,0,youtube,128,64,WHITE);
  display.display();
  delay(3000);
}

void loop() {
  pulsador = digitalRead(8); 
  if(pulsador==HIGH) {          //si el estado es pulsado
    personas = 0;
  }
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
  distanceCm= duration*0.034/2;
  if(distanceCm < 100) {
    personas += 1;
    delay(700);//TIEMPO DE ESPERA
  }
  display.clearDisplay();//BORRAR DISPLAY
  display.setCursor(1,4);//POSICION DE INICIO DE ESCRITURA
  display.println("Personas: ");//TEXTO EN PANTALLA
  display.setCursor(50,30);
  display.println(personas);
  display.display();
}
